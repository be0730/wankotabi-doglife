<header class="border-b">
  <nav class="mx-auto max-w-7xl px-4">
  <% if user_signed_in? %>
    <div class="flex h-16 items-center justify-between">
      <!-- ロゴ -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "sample.png", class: "h-8 w-auto" %>
        <% end %>
        <p>
          わんこたび-Wanko Tabi-<br>
          〜わんことお出かけ〜
        </p>
      </div>

      <!-- ハンバーガー（LG未満で表示） -->
      <div class="lg:hidden">
        <button
          id="menu-button"
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring"
          aria-expanded="false"
          aria-controls="mobile-menu"
          onclick="
            const m=document.getElementById('mobile-menu');
            const ex=this.getAttribute('aria-expanded')==='true';
            this.setAttribute('aria-expanded', String(!ex));
            m.classList.toggle('hidden');
          "
        >
          <span class="sr-only">メニューを開閉</span>
          <!-- アイコン -->
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>

      <!-- 右側メニュー（LG以上で表示） -->
      <div class="hidden lg:flex lg:items-center lg:gap-4">
        <%= link_to 'トップページ', root_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100" %>
        <%= link_to '投稿する', new_facility_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100" %>

        <!-- プロフィールドロップダウン（簡易版） -->
        <div class="relative">
          <button
            type="button"
            class="flex items-center gap-2 rounded-full focus:outline-none"
            onclick="document.getElementById('profile-menu').classList.toggle('hidden')"
          >
            <%= image_tag 'sample.png', class: 'h-10 w-10 rounded-full' %>
            <div class="px-4 py-2 text-sm text-gray-500"><%= current_user.name %></div>
          </button>

          <!-- ドロップダウンメニュー -->
          <div
            id="profile-menu"
            class="absolute right-0 mt-2 w-52 overflow-hidden rounded-md bg-white shadow hidden"
          >
            <div class="border-t my-1"></div>
            <%= link_to 'マイページ', root_path, class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
            <%= link_to '投稿一覧', root_path, class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
            <%= link_to 'お気に入り', root_path, class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
            <%= link_to 'ログアウト',
                        destroy_user_session_path,
                        data: { turbo_method: :delete },
                        class: 'block px-4 py-2 text-sm hover:bg-gray-50 text-red-600' %>
          </div>
        </div>
      </div>
    </div>

    <!-- モバイルメニュー（LG未満） -->
    <div id="mobile-menu" class="hidden lg:hidden">
      <div class="flex flex-col gap-2 py-3 px-4">
        <!-- 投稿・お気に入り -->
        <%= link_to 'トップページ', root_path, class: "w-full px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 text-center" %>
        <%= link_to '投稿する', new_facility_path, class: "w-full px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 text-center" %>

        <!-- プロフィール関連 -->
        <div class="mt-4 border-t pt-3">
          <div class="flex items-center gap-2 mb-2">
            <%= image_tag 'sample.png', class: 'h-10 w-10 rounded-full' %>
            <span class="text-gray-700 text-sm"><%= current_user.name %></span>
          </div>
          <%= link_to 'マイページ',  root_path, class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
          <%= link_to '投稿一覧', root_path, class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
          <%= link_to 'お気に入り', root_path, class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
          <%= link_to 'ログアウト',
                      destroy_user_session_path,
                      data: { turbo_method: :delete },
                      class: 'block px-4 py-2 text-sm hover:bg-gray-50 text-red-600' %>
        </div>
      </div>
    </div>

  <% else %>
    <div class="flex h-16 items-center justify-between">
      <!-- ロゴ -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "sample.png", class: "h-8 w-auto" %>
        <% end %>
        <p>
          わんこたび-Wanko Tabi-<br>
          〜わんことお出かけ〜
        </p>
      </div>

      <!-- ハンバーガー（LG未満で表示） -->
      <div class="lg:hidden">
        <button
          id="menu-button"
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring"
          aria-expanded="false"
          aria-controls="mobile-menu"
          onclick="
            const m=document.getElementById('mobile-menu');
            const ex=this.getAttribute('aria-expanded')==='true';
            this.setAttribute('aria-expanded', String(!ex));
            m.classList.toggle('hidden');
          "
        >
          <span class="sr-only">メニューを開閉</span>
          <!-- アイコン -->
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>

      <!-- 右側メニュー（LG以上で表示） -->
      <div class="hidden lg:flex lg:items-center lg:gap-4">
        <%= link_to '新規登録', new_user_registration_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100" %>
        <%= link_to 'ログイン', new_user_session_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100" %>
      </div>
    </div>

    <!-- モバイルメニュー（LG未満） -->
    <div id="mobile-menu" class="hidden lg:hidden">
      <div class="flex flex-col gap-2 py-3 px-4">
        <%= link_to '新規登録', new_user_registration_path, class: "w-full px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 text-center" %>
        <%= link_to 'ログイン', new_user_session_path, class: "w-full px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 text-center" %>
      </div>
    </div>
  <% end %>
  </nav>
</header>
