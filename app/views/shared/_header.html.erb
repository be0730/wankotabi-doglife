<header class="sticky top-0 border-b relative z-50 bg-amber-50">
  <nav class="flex flex-col mx-auto max-w-7xl px-4">
    <!-- 上段（共通） -->
    <div class="flex h-16 items-center justify-between">
      <!-- ロゴ（共通） -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "sample.png", class: "h-8 w-auto" %>
        <% end %>
        <p>
          わんこたび-Wanko Tabi-<br>
          〜わんことお出かけ〜
        </p>
      </div>

      <!-- ハンバーガー（LG未満）共通 -->
      <div class="lg:hidden">
        <%= render "shared/mobile_toggle", menu_id: "mobile-menu" %>
      </div>

      <!-- 右側メニュー（LG以上）→ 中身は部分テンプレへ -->
      <div class="hidden lg:flex lg:items-center lg:gap-4">
        <%= render "shared/nav_links" %>
      </div>
    </div>

    <!-- モバイルメニュー（LG未満）→ 中身は部分テンプレへ -->
    <div id="mobile-menu" class="hidden lg:hidden">
      <div class="flex flex-col gap-2 py-3 px-4">
        <%= render "shared/mobile_links" %>
      </div>
    </div>
  </nav>
</header>
