<div class="relative">
  <button
    type="button"
    class="flex items-center gap-2 rounded-full focus:outline-none"
    onclick="document.getElementById('profile-menu').classList.toggle('hidden')"
  >
    <%= avatar_image_tag(current_user, size: 40, class: 'h-10 w-10') %>
    <div class="px-4 py-2 text-sm text-gray-500"><%= current_user.name %></div>
  </button>

  <div id="profile-menu" class="absolute right-0 mt-2 w-52 overflow-hidden rounded-md bg-white shadow hidden z-50">
    <div class="border-t my-1"></div>
    <%= link_to t('header.my_page'), user_path(current_user), class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
    <%= link_to t('header.posts'), post_list_user_path(current_user), class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
    <%= link_to t('header.favorite'), favorites_facilities_path, class: 'block px-4 py-2 text-sm hover:bg-gray-50' %>
    <%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'block px-4 py-2 text-sm hover:bg-gray-50 text-red-600' %>
  </div>
</div>
