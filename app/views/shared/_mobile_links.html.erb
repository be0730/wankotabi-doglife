<% if user_signed_in? %>
  <%= link_to t('header.top'), root_path, class: "w-full text-center btn-primary" %>
  <%= link_to t('header.new_post'), new_facility_path, class: "w-full text-center btn-primary" %>
  <div class="mt-4 border-t pt-3">
    <div class="flex items-center gap-2 mb-2">
      <%= avatar_image_tag(current_user, size: 40, class: 'h-10 w-10') %>
      <span class="text-gray-700 text-sm"><%= current_user.name %></span>
    </div>
    <%= link_to t('header.my_page'), user_path(current_user), class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
    <%= link_to t('header.posts'), post_list_user_path(current_user), class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
    <%= link_to t('header.favorite'), favorites_facilities_path, class: "block w-full text-left px-4 py-2 rounded hover:bg-gray-100" %>
    <%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'block px-4 py-2 text-sm hover:bg-gray-50 text-red-600' %>
  </div>
<% else %>
  <%= link_to t('header.sign_up'), new_user_registration_path, class: "w-full text-center btn-primary" %>
  <%= link_to t('header.login'), new_user_session_path, class: "w-full text-center btn-primary" %>
  <%= button_to t('header.google_login'),
      user_google_oauth2_omniauth_authorize_path,
      method: :post,
      data: { turbo: false },
      class: "btn-primary" %>
<% end %>
