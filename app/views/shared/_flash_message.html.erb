<% flash.each do |message_type, message| %>
  <div class="mx-auto max-w-7xl px-4 mt-4">
    <p class="rounded-md <%=
      case message_type
      when "success" then "bg-green-50 text-green-700"
      when "danger" then "bg-red-50 text-red-700"
      else "bg-blue-50 text-blue-700"
      end
    %> px-4 py-2"><%= message %></p>
  </div>
<% end %>