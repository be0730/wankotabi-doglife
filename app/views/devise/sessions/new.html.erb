<% content_for :title, t('header.login') %>
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">
      <%= t('header.login') %>
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, t('users.email'), class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email,
                required: true,
                autofocus: true,
                autocomplete: "email",
                class: "border block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, t('users.password'), class: "block text-sm/6 font-medium text-gray-900" %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password,
                required: true,
                autocomplete: "current-password",
                class: "border block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.submit t('header.login'),
              class: "mt-20 flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm/6 text-gray-500">
      <%= link_to t('buttons.password_reset'), new_user_password_path,
          class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
