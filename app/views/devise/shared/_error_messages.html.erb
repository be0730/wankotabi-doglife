<%# app/views/devise/shared/_error_messages.html.erb %>
<% if resource && resource.errors.any? %>
  <div class="mx-auto max-w-3xl mt-4">
    <div class="rounded-md bg-red-50 text-red-700 px-4 py-3">
      <p class="font-semibold mb-2">
        <%= t("errors.messages.not_saved",
              count: resource.errors.count,
              resource: resource.class.model_name.human) rescue "入力エラーがあります" %>
      </p>
      <ul class="list-disc pl-5 space-y-1">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
