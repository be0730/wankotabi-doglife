<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">新規登録</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, "ユーザー名", class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :name, required: true, autocomplete: "name",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, required: true, autocomplete: "email",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.label :password, "パスワード（半角英数字：６文字以上）", class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password, required: true, autocomplete: "new-password",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード確認（半角英数字：６文字以上）", class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password",
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>

      <div class="mt-4">
        <%= f.label :avatar, "プロフィール画像" %><br>
        <%= image_tag(resource.avatar.url || resource.avatar.default_url, class: "h-16 w-16 rounded-full") %><br>
        <%= f.file_field :avatar, accept: "image/*" %>
      </div>

      <div>
        <%= f.submit "登録する",
              class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-gray-500">
      <%= link_to "ログインはこちら", new_user_session_path,
            class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
