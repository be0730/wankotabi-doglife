<%= form_with model: @facility, local: true do |f| %>
  <% if @facility.errors.any? %>
    <div class="mb-6 rounded-md bg-red-50 p-4 text-red-700">
      <h2 class="font-semibold">
        <%= t("errors.messages.not_saved",
              count: @facility.errors.count,
              resource: Facility.model_name.human) %>
      </h2>
      <ul class="mt-2 list-disc pl-5">
        <% @facility.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-auto max-w-7xl px-4 ">
    <!-- 基本情報 -->
    <div class="my-6 pb-8">
      <div class="title-text font-semibold"><%= t('form.basic_info.title') %></div>

      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
        <!-- カテゴリ -->
        <div class="col-span-full">
          <label class="title-text"><%= t('form.basic_info.category') %></label>
            <% category_options = {
              "宿泊施設"   => "accommodation",
              "飲食店"     => "restaurant",
              "レジャー施設" => "leisure",
              "ショップ"   => "shop"
            } %>

            <% color_classes = {
              "accommodation" => "bg-indigo-500",
              "restaurant"    => "bg-amber-500",
              "leisure"       => "bg-emerald-500",
              "shop"          => "bg-pink-500"
            } %>

            <div class="ml-6 mt-6 flex flex-wrap items-center gap-3">
              <% category_options.each do |label_text, value| %>
                <label class="inline-flex items-center cursor-pointer">
                  <%= f.radio_button :category, value,
                        id: "category_#{value}",
                        class: "peer w-4 h-4 accent-indigo-600 border-gray-300" %>
                <span class="inline-flex items-center gap-2 px-3 py-2 rounded-md border border-gray-200 hover:bg-gray-50
                            peer-checked:border-indigo-500 peer-checked:bg-indigo-50 <%= color_classes[value] %>">
                  <span class="text-base md:text-lg font-medium text-gray-900"><%= label_text %></span>
                </span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- 施設名 -->
        <div class="sm:col-span-3">
          <label class="title-text"><%= t('form.basic_info.name') %></label>
          <div>
            <%= f.text_field :title, required: true, placeholder: t('placeholders.name'),class: "text-field" %>
          </div>
        </div>

        <!-- 概要欄 -->
        <div class="sm:col-span-3">
          <label class="title-text"><%= t('form.basic_info.overview') %></label>
          <div>
            <%= f.text_area :overview, rows: 4, placeholder: t('placeholders.overview'),class: "text-field" %>
          </div>
        </div>
        <!-- 施設画像 -->
        <div class="col-span-full">
          <%= f.label :images, t('form.basic_info.image'), class:"title-text" %><br>
          <%= f.file_field :images, multiple: true, accept: "image/*", direct_upload: true %>
          <% if @facility.persisted? && @facility.images.attached? %>
            <div class="mt-4 grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
              <% @facility.images.each do |image| %>
                <div class="relative">
                  <%= image_tag image.variant(resize_to_limit: [300, 300]), class: "h-32 w-full object-cover rounded-md" %>
                  <%= link_to "×", facility_image_path(@facility, image.signed_id),
                      method: :delete,
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "absolute top-1 right-1 rounded-full bg-red-600 px-2 py-1 text-xs font-bold text-white hover:bg-red-700" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- 住所・地図 -->
    <div class="my-6 pb-8">
      <div class="title-text font-semibold"><%= t('form.address_info.address') %></div>

      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
        <div class="sm:col-span-3">
          <label class="title-text"><%= t('form.address_info.postal_code') %></label>
          <div class="mt-2">
            <%= f.text_field :postal_code, placeholder: t('placeholders.postal_code'),
                  class: "text-field" %>
          </div>
          <!-- 都道府県選択 -->
          <label class="title-text"><%= t('form.address_info.prefecture') %></label>
          <div class="mt-2">
            <%= f.collection_select :prefecture_id,
                  Prefecture.order(:code),     # 1..47 の順で表示
                  :id,                         # value
                  :name,                       # 表示名
                  { prompt: "選択してください" },
                  class: "text-field" %>

            <% if @facility.errors[:prefecture].present? %>
              <p class="mt-1 text-xl text-red-600"><%= @facility.errors[:prefecture].first %></p>
            <% end %>
          </div>
          <!-- 市区町村 -->
          <label class="title-text"><%= t('form.address_info.city') %></label>
          <div class="mt-2">
            <%= f.text_field :city, placeholder: t('placeholders.city'),class: "text-field" %>
          <!-- 町丁目・番地 -->
          <label class="title-text"><%= t('form.address_info.street') %></label>
          <div class="mt-2">
            <%= f.text_field :street, placeholder: t('placeholders.street'),class: "text-field" %>
          </div>
          <!-- 建物名・部屋番号 -->
          <label class="title-text"><%= t('form.address_info.building') %></label>
          <div class="mt-2">
            <%= f.text_field :building, placeholder: t('placeholders.building'),class: "text-field" %>
          </div>
        </div>
      </div>
    </div>

    <!-- 連絡先／営業時間 -->
    <div class="my-6 pb-8">
      <div class="title-text font-semibold"><%= t('form.phone_hours_info.title') %></div>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
        <div class="sm:col-span-3">
          <label class="title-text"><%= t('form.phone_hours_info.phone_number') %></label>
          <div class="mt-2">
            <%= f.text_field :phone_number, placeholder: t('placeholders.phone_number'),class: "text-field" %>
          </div>
          <!-- 連絡先 -->
          <label class="title-text"><%= t('form.phone_hours_info.business_hours') %></label>
          <div class="mt-2">
            <%= f.text_field :business_hours, placeholder: t('placeholders.business_hours'),
                  class: "text-field" %>
          </div>
          <!-- 定休日 -->
          <label class="title-text"><%= t('form.phone_hours_info.closed_day') %></label>
          <div class="mt-2">
            <%= f.text_field :closed_day, placeholder: t('placeholders.closed_day'),class: "text-field" %>
          </div>
        </div>
      </div>
    </div>

    <!-- SNS / リンク -->
    <div class="my-6 pb-8">
      <div class="title-text font-semibold"><%= t('form.url_info.title') %></div>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
        <div class="sm:col-span-3">
          <label class="title-text"><%= t('form.url_info.homepage') %></label>
          <div class="mt-2">
            <%= f.url_field :homepage_url, placeholder: t('placeholders.homepage'),class: "text-field" %>
          </div>
          <!-- インスタグラム -->
          <label class="title-text"><%= t('form.url_info.instagram') %></label>
          <div class="mt-2">
            <%= f.url_field :instagram_url, placeholder: t('placeholders.instagram'),class: "text-field" %>
          </div>
          <!-- フェイスブック -->
          <label class="title-text"><%= t('form.url_info.facebook') %></label>
          <div class="mt-2">
            <%= f.url_field :facebook_url, placeholder: t('placeholders.facebook'),class: "text-field" %>
          </div>
          <!-- X（Twitter） -->
          <label class="title-text"><%= t('form.url_info.x_twitter') %></label>
          <div class="mt-2">
            <%= f.url_field :x_url, placeholder: t('placeholders.x_twitter'),class: "text-field" %>
          </div>
        </div>
      </div>
    </div>

    <!-- タグ選択 -->
    <div class="my-6 pb-8">
      <%= render 'tag_picker', f: f %>
    </div>

    <!-- 補足 -->
    <div class="text-xl font-semibold text-gray-900"><%= t('form.supplement') %></div>
    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
      <div class="sm:col-span-3">
        <%= f.text_area :supplement, rows: 4, placeholder: t('placeholders.supplement'), class: "text-field" %>
      </div>
    </div>
  </div>

  <!-- 登録ボタン -->
  <div class="m-12 flex items-center justify-end gap-x-6">
    <%= link_to t('buttons.cancel'), facilities_path,
          class: "inline-block rounded-md bg-gray-100 px-3 py-2 text-xl font-semibold text-gray-900" %>
    <button type="submit"
            class="rounded-md bg-indigo-600 px-3 py-2 text-xl font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
      <%= t(@facility.persisted? ? 'buttons.update' : 'buttons.register') %>
    </button>
  </div>
<% end %>
