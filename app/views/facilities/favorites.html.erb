<% content_for :title, t('favorite.facilities') %>
<h1 class="m-6 text-2xl font-bold text-gray-900"><%= t('favorite.facilities') %></h1>
<div class="w-full">
  <div class="m-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% if @favorite_facilities.present? %>
      <%= render partial: "facilities/facility", collection: @favorite_facilities, as: :facility %>
    <% else %>
      <p class="col-span-full my-10 text-center text-gray-500"><%= t('favorite.does_not_exist') %></p>
    <% end %>
  </div>
  <div class="mt-16 flex justify-end">
    <%= paginate @favorite_facilities %>
  </div>
</div>
