<% content_for :title, "お気に入り一覧" %>
<h1 class="mb-6 text-2xl font-bold text-gray-900">お気に入り施設一覧</h1>
<div class="w-full">
  <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% if @favorite_facilities.present? %>
      <%= render @favorite_facilities %>
    <% else %>
      <p class="col-span-full my-10 text-center text-gray-500">お気に入りはありません。</p>
    <% end %>
  </div>
  <div class="mt-16 text-right">
    <%= paginate @favorite_facilities %>
  </div>
</div>
