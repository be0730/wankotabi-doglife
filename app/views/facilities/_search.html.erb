<%= search_form_for @q, url: url do |f| %>
  <div class="flex space-x-2">
    <div class="flex-1">
      <%= f.label :keyword_cont, t('search.keyword'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.search_field :keyword_cont,
            placeholder: t('search.placeholder'),
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    <div class="flex items-end">
      <%= f.submit t('search.button'), class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>