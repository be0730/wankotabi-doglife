<div class="js-swiper container mx-auto bg-white">
  <div class="swiper h-full min-h-0 bg-white">
    <div class="swiper-wrapper h-full min-h-0 bg-white">
      <% if facility.images.attached? %>
        <% facility.images.attachments.order('active_storage_attachments.created_at ASC, active_storage_attachments.id ASC').each do |img| %>
          <div class="swiper-slide h-full min-h-0 bg-white">
            <div class="relative aspect-[4/3] rounded-md bg-white overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center p-2">
                <% begin %>
                  <% base = "#{img.blob.id}-#{img.blob.filename.base}".to_s.parameterize.presence || "image" %>
                  <% rep_path = ->(rep, name) { rails_blob_representation_proxy_path(rep.blob.signed_id, rep.variation.key, name) } %>

                  <% small_avif  = img.variant(resize_to_limit: [900,  600],  format: :avif, saver: { quality: 50 }) %>
                  <% medium_avif = img.variant(resize_to_limit: [1200, 900],  format: :avif, saver: { quality: 50 }) %>
                  <% large_avif  = img.variant(resize_to_limit: [1600, 1200], format: :avif, saver: { quality: 50 }) %>

                  <% small_png  = img.variant(resize_to_limit: [900,  600],  format: :png, saver: { compression: 9 }) %>
                  <% medium_png = img.variant(resize_to_limit: [1200, 900],  format: :png, saver: { compression: 9 }) %>
                  <% large_png  = img.variant(resize_to_limit: [1600, 1200], format: :png, saver: { compression: 9 }) %>

                  <% large_png_src = rep_path.call(large_png, "#{base}-1600.png") %>

                  <%= picture_tag large_png_src,
                    class: "block h-full w-full",
                    sources: [
                      {
                        srcset: [
                          "#{rep_path.call(small_avif,  "#{base}-900.avif")} 900w",
                          "#{rep_path.call(medium_avif, "#{base}-1200.avif")} 1200w",
                          "#{rep_path.call(large_avif,  "#{base}-1600.avif")} 1600w"
                        ].join(", "),
                        type:  "image/avif",
                        sizes: "(max-width: 1024px) 900px, (max-width: 1280px) 1200px, 1600px"
                      },
                      {
                        srcset: [
                          "#{rep_path.call(small_png,  "#{base}-900.png")} 900w",
                          "#{rep_path.call(medium_png, "#{base}-1200.png")} 1200w",
                          "#{rep_path.call(large_png,  "#{base}-1600.png")} 1600w"
                        ].join(", "),
                        type:  "image/png",
                        sizes: "(max-width: 1024px) 900px, (max-width: 1280px) 1200px, 1600px"
                      }
                    ],
                    img: {
                      class: "block h-full w-full max-h-full max-w-full object-contain object-center",
                      loading: "lazy", decoding: "async", alt: facility.title
                    } %>
                <% rescue ActiveStorage::FileNotFoundError, Errno::ENOENT %>
                  <%= image_tag "sample.png",
                        class: "block h-full w-full object-contain",
                        loading: "lazy", decoding: "async", alt: facility.title %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="swiper-slide h-full min-h-0">
          <div class="relative aspect-[4/3] rounded-md bg-white overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center p-2">
              <%= image_tag "sample.png",
                    class: "block h-full w-full object-contain",
                    loading: "lazy", decoding: "async", alt: facility.title %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>
