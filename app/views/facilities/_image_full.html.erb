<div class="max-w-5xl mx-auto">
    <% if facility.images.attached? %>
    <% begin %>
        <%= image_tag facility.images.first.variant(resize_to_limit: [1600, 1200]).processed,
            class: "block w-full h-1/3 rounded-md" %>
    <% rescue ActiveStorage::FileNotFoundError, Errno::ENOENT %>
        <%= image_tag "sample.png", class: "block w-full h-auto rounded-md" %>
    <% end %>
    <% else %>
    <%= image_tag "sample.png", class: "block w-full h-56 rounded-md" %>
    <% end %>
</div>
