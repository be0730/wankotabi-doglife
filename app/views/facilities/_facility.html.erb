<div id="<%= dom_id(facility) %>" class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm">
  <div class="flex items-start justify-between gap-3">
    <h3 class="truncate text-lg font-semibold text-gray-900"><%= facility.title %></h3>
    <span class="shrink-0 rounded-full bg-gray-100 px-2 py-0.5 text-xs text-gray-700">
      <%= facility.respond_to?(:category_i18n) ? facility.category_i18n : facility.category %>
    </span>
  </div>

  <% if facility.images.attached? %>
    <div class="mt-3">
      <%= image_tag facility.images.first.variant(resize_to_limit: [400, 300]), class: "h-48 w-full rounded-md object-cover" %>
    </div>
  <% end %>

  <div class="mt-3 space-y-1 text-sm text-gray-500">
    <% if facility.city.present? || facility.street.present? || facility.building.present? || facility.respond_to?(:prefecture_name) %>
      <div>住所：<%= facility.respond_to?(:full_address) ? facility.full_address : [facility.prefecture_name, facility.city, facility.street, facility.building].compact.join %></div>
    <% end %>
    <% if facility.phone_number.present? %>
      <div>電話：<%= facility.phone_number %></div>
    <% end %>
  </div>

  <% if facility.overview.present? %>
    <% clamp = local_assigns[:clamp_overview] == false ? "" : "line-clamp-3" %>
    <p class="mt-2 text-sm text-gray-600 <%= clamp %>"><%= facility.overview %></p>
  <% end %>

  <% if local_assigns[:show_card_map] %>
    <div id="<%= dom_id(facility, :map) %>"
        class="mt-2 h-48 w-full rounded-md bg-gray-100"
        data-lat="<%= facility.latitude %>"
        data-lng="<%= facility.longitude %>"
        data-address="<%= j(facility.try(:full_address) || [facility.prefecture&.name, facility.city, facility.street, facility.building].compact.join) %>">
    </div>
  <% end %>

  <!-- 施設詳細ページでは詳細ボタンを表示させない -->
  <% unless current_page?(facility_path(facility)) %>
    <div class="mt-4 flex items-center justify-end gap-2">
      <%= link_to "詳細", facility_path(facility),
            class: "inline-block rounded-md bg-gray-100 px-3 py-1.5 text-sm font-medium hover:bg-gray-50" %>
    </div>
  <% end %>

    <% if user_signed_in? && facility.user_id != current_user.id %>
      <div class="ms-auto" id="<%= dom_id(facility, :favorite_buttons) %>">
        <%= render "facilities/favorite_buttons", facility: facility %>
      </div>
    <% end %>
  </div>
</div>
