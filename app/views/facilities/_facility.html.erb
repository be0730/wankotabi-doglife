<div id="<%= dom_id(facility) %>" class="mx-12 rounded-md border border-gray-200 bg-white p-4 shadow-sm">
  <div class="flex items-start justify-between gap-4">
    <h3 class="truncate text-lg font-semibold text-gray-900"><%= facility.title %></h3>
    <span class="shrink-0 rounded-full bg-gray-100 px-2 py-0.5 text-xl text-gray-700">
      <%= t("enums.facility.category.#{facility.category}", default: facility.category) %>
    </span>
  </div>

  <% if facility.images.attached? %>
    <img class="mt-3 rounded-md overflow-hidden">
      <%= image_tag facility.images.first.variant(resize_to_limit: [400, 300]).processed,
          class: "block max-h-[300px] max-w-full rounded-md" %>
  <% else %>
    <%= image_tag "sample.png", class: "block max-h-[300px] max-w-full rounded-md" %>
  <% end %>

  <div class="mt-2 space-y-1 text-lg text-gray-900">
    <p><%= t('form.address_info.address') %>：<%= facility.respond_to?(:full_address) ? facility.full_address : [facility.prefecture_name, facility.city, facility.street, facility.building].compact.join %></p>
    <p><%= t('form.basic_info.overview') %>：<%= facility.overview %></p>
    <p><%= t('form.phone_hours_info.phone_number') %>：<%= facility.phone_number %></p>
    <p><%= t('form.phone_hours_info.business_hours') %>：<%= facility.business_hours %></p>
    <p><%= t('form.phone_hours_info.closed_day') %>：<%= facility.closed_day %></p>
    <p><%= t('form.url_info.homepage') %>：<%= facility.homepage_url %></p>
    <p><%= t('form.url_info.instagram') %>：<%= facility.instagram_url %></p>
    <p><%= t('form.url_info.facebook') %>：<%= facility.facebook_url %></p>
    <p><%= t('form.url_info.x_twitter') %>：<%= facility.x_url %></p>
    <p><%= t('form.supplement') %>：<%= facility.supplement %></p>
  </div>


  <% if user_signed_in? && facility.user_id != current_user.id %>
    <div class="ms-auto text-end " id="<%= dom_id(facility, :favorite_buttons) %>">
      <%= render "facilities/favorite_buttons", facility: facility %>
    </div>
  <% end %>

  <!-- 施設詳細ページでは詳細ボタンを表示させない -->
  <% unless current_page?(facility_path(facility)) %>
    <div class="mt-4 flex items-center justify-end gap-2">
      <%= link_to t('buttons.detail'), facility_path(facility),
            class: "inline-block rounded-md bg-gray-100 px-3 py-1.5 text-xl font-medium hover:bg-gray-50" %>
    </div>
  <% end %>
</div>
