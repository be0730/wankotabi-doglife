<h1 class="m-6 text-2xl font-bold text-gray-900"><%= current_user.name %>さんの投稿一覧</h1>
  <div class="w-full">
    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @facilities.each do |facility| %>
      <%= render facility %>
      <% end %>
    </div>
  </div>

<div class="mt-16 text-right">
  <%= paginate @facilities %>
</div>